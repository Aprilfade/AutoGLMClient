<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许所有域名使用自签名证书和明文流量（仅用于开发测试） -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- 信任系统证书 -->
            <certificates src="system" />
            <!-- 信任用户添加的证书（包括自签名证书） -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- 针对特定域名的配置 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">u854750-8485-a66a2bde.westb.seetacloud.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
